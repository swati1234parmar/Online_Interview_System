<%= form_for [:admin,@test], :html => { :class => "form-horizontal test" } do |f| %>

  <% if @test.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@test.errors.count, "error") %> prohibited this test from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @test.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
 <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
         <%= f.text_field :name, :class => 'form-control' %>
      </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :duration, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :duration, :class => 'form-control' %>
      </div>
    <%=f.error_span(:duration) %>
  </div>
  <div class="col-lg-10">
    <%= f.collection_check_boxes(:question_ids, Question.all, 
    :id, :question)%> 
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary btn-xs div' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),admin_tests_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
