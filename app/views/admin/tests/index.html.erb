<%- model_class = Test -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  <script type="text/javascript">
      function preventBack() { window.history.forward(); }
      setTimeout("preventBack()", 0);
      window.onunload = function () { null };
  </script>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:duration) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.name %></td>
        <td><%= test.duration %></td>
        <td><%=l test.created_at %></td>
        <td>
        
          <%if current_user.admin%>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      admin_test_path(test), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_test_path(test), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_test_path(test),
                      :method => :delete,
                      :data => { :confirm => t('.confirm',
                      :default => t("helpers.links.confirm", 
                      :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        
          <% end %>
        <%if !current_user.admin%>
          <% if @result.select{|a| a.user_id == current_user.id and a.test_id == test.id} == []  %> 
            <%= link_to t('.StartTest', :default => t("   helpers.links.StartTest")),
              start_test_path(test),
            :class => 'StartTest' %> 
              <% else %>
           <%= link_to "ShowResult",result_path(test), :class => 'ShowResult' %>
          <% end %>
        <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
 <%if current_user.admin%>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_test_path,
            :class => 'btn btn-primary' %>
<% end %>